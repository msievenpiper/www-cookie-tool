{
  "appId": "com.cookietool.app",
  "productName": "Cookie Tool",
  "directories": {
    "output": "release/${version}",
    "buildResources": "build"
  },
  "icon": "build/icon.png",
  "files": [
    "dist",
    "dist-electron",
    "resources"
  ],
  "extraResources": [
    {
      "from": "resources",
      "to": "resources"
    }
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.icns"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 270,
        "y": 380,
        "type": "file",
        "path": "INSTALLATION.md"
      }
    ]
  },
  "win": {
    "target": ["nsis"],
    "icon": "build/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
